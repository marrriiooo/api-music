{
    "env": {
      "commonjs": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-trailing-spaces": "error",
      "eol-last": "error",
      "no-multiple-empty-lines": {
        "max": 1,
        "maxEOF": 0
      }
    }
  }